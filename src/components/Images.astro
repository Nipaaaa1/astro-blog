---
import { Image } from "astro:assets"
import { cn } from "../lib/utils"

interface Props {
  src: string
  alt: string
  fill: boolean
}

const { src, alt, fill } = Astro.props

const manipulateCloudinaryUrl = (url: string): string => {
  const uploadIndex = url.indexOf('/upload/');
  if (uploadIndex === -1) throw new Error('Invalid URL');
  return url.slice(0, uploadIndex + 8) + 'f_avif/' + url.slice(uploadIndex + 8);
}
---

<Image src={manipulateCloudinaryUrl(src)} alt={alt} class={cn(['rounded-md', fill ? 'w-full' : ''])} inferSize />
