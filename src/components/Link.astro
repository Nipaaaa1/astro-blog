---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-zinc-950/15 dark:decoration-zinc-50/25 hover:decoration-zinc-950/25 hover:dark:decoration-zinc-50/50 text-current hover:text-zinc-950 hover:dark:text-zinc-50 transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
